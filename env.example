# Database Configuration
# Supabase PostgreSQL connection string
# Format: postgres://postgres.[PROJECT-REF]:[PASSWORD]@[DB-REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-sa-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key
DIRECT_URL="postgresql://postgres.your-project-ref:your-password@aws-0-sa-east-1.pooler.supabase.com:5432/postgres"
CLERK_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Server Configuration
PORT=3003

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/clientes
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/clientes
NEXT_PUBLIC_CLERK_DOMAIN=http://your-domain:3003 